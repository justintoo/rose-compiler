#!/usr/bin/env bash
#--------------------------------------------------------------------
# import: avoid double inclusion
#--------------------------------------------------------------------
if test "${Rose__Compile__imported+defined}" == "defined"
then
    return 0
fi
Rose__Compile__imported=1

#--------------------------------------------------------------------
# Modules
#--------------------------------------------------------------------
import util/logging

#--------------------------------------------------------------------
# Configuration
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# API
#--------------------------------------------------------------------
function rose::compile::cli() {
  rose::log::debug "rose::compile::cli args = $@"

  while (( "$#" )); do
      arg="$1"
      shift

      case "$arg" in
        -h|--help) rose::compile::help "$@";;
        software) rose::log::info "Got software!";;
        *) rose::compile::help "$@";;
      esac
  done
}
#--------------------------------------------------------------------
#--------------------------------------------------------------------
function rose::compile::help() {
#--------------------------------------------------------------------
  cat <<-EOF
Usage: rose compile [Options] <software>

Arguments
  <software>    Name of software to compile

Options
  --help        Prints this help information
EOF
}

function rose::compile() {
  rose::compile::cli
}

